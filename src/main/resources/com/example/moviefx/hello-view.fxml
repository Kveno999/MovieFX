<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.moviefx.controllers.MovieController" spacing="10" alignment="CENTER">
    <Label styleClass="header" text="Product Details" />

    <HBox spacing="10" alignment="CENTER">
        <Label styleClass="property" text="ID:" />
        <TextField fx:id="id" styleClass="value" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label styleClass="property" text="Name:" />
        <TextField fx:id="name" styleClass="value" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label styleClass="property" text="Title:" />
        <TextField fx:id="title" styleClass="value" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label styleClass="property" text="Description:" />
        <TextField fx:id="description" styleClass="value" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label styleClass="property" text="Rate:" />
        <TextField fx:id="rate" styleClass="value" />
    </HBox>

    <Button text="Save" onAction="#onSave" />
    <Button text="Open Chart" onAction="#onOpenChart" />


</VBox>


